<nav class="bg-gray-900 text-white flex justify-between items-center">
    <%# Show logo  %>
    <div id="logo" class="w-36">
        <%= image_tag("logo.png") %>
    </div>

    <%# Show search bar  %>
    <%= form_tag(search_path, :method => "get") do %> 
        <div class="flex lg:absolute">  
            <%= search_field_tag :search, params[:search], placeholder: "Search", class: "rounded-tl-lg rounded-bl-lg h-8 text-black" %>  
            <div class="input-group-btn">  
                <%= button_tag "Search", :class => 'bg-red-500 hover:bg-red-800 h-8 px-2 rounded-tr-lg rounded-br-lg',:name => nil%>  
            </div>  
        </div> 
    <% end %>


    <%# Show links  %>
    <div id="nav-links" class="flex p-4 space-x-3 text-xl">
        <%= link_to "Home", listings_path, class: "hover:text-red-500" %>
        <%= link_to "Categories", categories_path, class: "hover:text-red-500" %>
        
        <%# Conditional links for if user is signed in  %>
        <% if user_signed_in? %>
            <%# TODO: Add profile link %>
            <%= link_to "Create Listing", new_listing_path, class: "hover:text-red-500" %>
            <%= link_to "Profile", profile_path, class: "hover:text-red-500" %>
            <%= link_to "Sign Out", destroy_user_session_path, class: "hover:text-red-500", method: :delete%>
        <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "hover:text-red-500" %>
                <p>|</p>
            <%= link_to "Sign Up", new_user_registration_path, class: "hover:text-red-500" %>
        <% end %>
    </div>

</nav>  